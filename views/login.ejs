<!DOCTYPE html>

<html>
	<head>
		<meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
		
		<title>Smart G4</title>

		<link href="/css/bootstrap.min.css" rel="stylesheet">
        <link href="/font-awesome/css/font-awesome.css" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">

        <link href="/css/animate.css" rel="stylesheet">
        <link href="/css/login.css" rel="stylesheet">
	</head>

	<body>
		<div class="container text-center">
			<div class="row">
				<div class="col-md-3"></div>
				<div class="col-md-6">
					<div class="wrap-box">
						<h1>Smart G4</h1>
						<form id="login" class="form" action="/login" method="POST">
							<div class="form-group">
								<input class="form-control" name="username" type="text" placeholder="Username">
								<input class="form-control" name="password" type="password" placeholder="Password">
							</div>
							<div class="form-group">
								<button type="submit" class="login-btn">LOGIN</button>
							</div>
						</form>
						<div>
							<p>Forgot <a>Username / Password?</a></p>
							<p>Create an account? <a>Sign Up</a></p>
						</div>
					</div>
				</div>
				<div class="col-md-3"></div>
			</div>
		</div> <!-- end container -->
	</body> <!-- end body -->
</html>

<script src="/js/jquery-3.1.1.min.js"></script>

<script type="text/javascript">
	console.log('<%= queryString.redirect_uri %>')

	$('#login').submit(function (event) {
		event.preventDefault();

		let form = $('#login');
		let username = $('input[name=username]').val();
		let password = $('input[name=password]').val();

		$.ajax({
			url: form.prop('action'),
			type: 'POST',
			dataType: 'JSON',
			data: {
				username: username,
				password: password,
				client: '<%= queryString.client_id %>'
			},
			success: function (data){
				if(data.status){ 
					let url = "<%= queryString.redirect_uri %>";
					url += "?code=" + data.authCode;
					url += "&state=" + "<%= queryString.state %>";
					console.log(url);
					window.location.href = url;
				}else{
					alert(data.message);
				}
			},
			error: function (err){
				console.log(err);
			}
		});
	});

</script>